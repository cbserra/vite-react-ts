{
  "name": "vite-react-ts",
  "version": "0.0.0",
  "description": "React Typescript Starter Template with Vite",
  "repository": {
    "type": "git",
    "url": "git@github.com:cbserra/vite-react-ts.git"
  },
  "keywords": [
    "vite",
    "react",
    "starter",
    "template"
  ],
  "author": "cbserra <789723+cbserra@users.noreply.github.com>",
  "license": "MIT",
  "homepage": "https://github.com/cbserra/vite-react-ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "jest",
    "serve": "vite preview",
    "---------": "",
    "lint": "eslint --ext .ts,.tsx src/",
    "lint:fix": "yarn run lint --fix",
    "prettier": "prettier 'src/**/*.ts*'",
    "prettier:fix": "prettier --write 'src/**/*.ts*'",
    "stylelint": "stylelint 'src/**/*css'",
    "stylelint:fix": "stylelint --fix 'src/**/*css'",
    "--------- ": "",
    "prepare": "husky install",
    "cm": "cz"
  },
  "lint-staged": {
    "*.{js,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": "stylelint --fix",
    "*.{html,json}": "prettier --write"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^3.1.4",
    "vite-plugin-svgr": "2.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@commitlint/prompt-cli": "^17.0.3",
    "@testing-library/dom": "^8.14.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.1",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.0.3",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "@vitejs/plugin-react": "2.1.0",
    "autoprefixer": "^10.4.7",
    "commitizen-emoji": "^1.0.5",
    "commitlint-config-gitmoji": "^2.2.5",
    "cz-conventional-changelog": "3.3.0",
    "cz-emoji": "^1.3.2-canary.2",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.2.5",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-jest-dom": "^4.0.2",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.6.0",
    "husky": "^8.0.1",
    "jest": "29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.14",
    "prettier": "2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "react-test-renderer": "^18.2.0",
    "tailwindcss": "^3.1.5",
    "ts-jest": "29.0.1",
    "typescript": "^4.7.4",
    "vite": "3.1.1",
    "vite-tsconfig-paths": "^3.5.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "commitizenEmoji": {
      "skipQuestions": [
        "scope",
        "body",
        "breakingBody",
        "issues"
      ],
      "conventionalFormat": true
    },
    "cz-emoji": {
      "symbol": true,
      "skipQuestions": [
        "scope",
        "issues"
      ]
    }
  }
}
